%h2 Student View

%table#students.table.table-striped.col-md-12
  %thead
    %tr
      %th Last Name
      %th First Name
      %th Graduation Year
      %th Graduation Semester
      %th CWID
      %th Academid Advisor
      %th Last Meeting
  %tbody
    %tr
      %td= @student.last
      %td= @student.first
      %td= @student.year
      %td= @student.semester
      %td= @student.CWID
      %td= @student.advisor
      %td= @student.lastMeet
      
    
      = button_to 'Delete', student_path(@student), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-primary'
      = link_to 'Back to student list', students_path, :class => 'btn btn-primary'
      = link_to 'Edit', edit_student_path(@student), :class => 'btn btn-primary'

%br
%h2 Meeting Notes
%table#students.table.table-striped.col-md-12
  %thead
    %tbody
      %tr
        %td= @student.notes
