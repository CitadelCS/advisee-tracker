<p id="alert"><%= alert %></p>
<h1>Add New Student</h1>
<%= form_tag students_path do |form| %>
  <div class="field">
    <%= label_tag :First_Name %>
    <%= text_field_tag :first %>
  </div>
  <div class="field">
    <%= label_tag :Last_Name %>
    <%= text_field_tag :last %>
  </div>
<div class="field">
    <%= label_tag :CWID %>
    <%= text_field_tag :CWID %>
  </div>
<div class="field">
    <%= label_tag :DOB %>
    <%= date_field_tag :DOB %> 
</div>
<div class="field">
    <%= label_tag :advisor %>
    <%= text_field_tag :advisor %>
  </div>
<div class="field">
    <%= label_tag :Graduation_Year%>
    <%= text_field_tag :year %>
  </div>
<div class="field">
    <%= label_tag :Graduation_Semester%>
    <%= text_field_tag :semester %>
  </div>
<div class="field">
    <%= label_tag :Last_Advising%>
    <%= date_field_tag :lastMeet %>
  </div>

  <div class="actions">
    <%= submit_tag "Add Student", :class => 'btn btn-primary'%>
  </div>
<% end %>
